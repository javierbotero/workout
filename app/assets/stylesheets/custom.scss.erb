$bg-dark-gray: rgb(77, 68, 63);
$bg-orange: rgb(234, 106, 44);

@mixin custom-background {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: top;
}
.add-background {
  @include custom-background;
}

.user-avatar {
  width: 100px;
  height: 100px;
  background-size: cover;
  background-position: center;
  border-radius: 50%;
  display: block;
}

.h-navbar {
  height: 12vh;
}

.h-footer {
  height: 11vh;
}

.h-index-c {
  height: 93vh;
}

.h-show-c {
  min-height: 89vh
}

.text-color-orange {
  color: $bg-orange;
}

.bg-color-orange {
  background-color: $bg-orange;
}

a:hover {
  color: gray;
}

.background-app {
  background-color: $bg-dark-gray;
}

.color-app {
  color: $bg-dark-gray;
}

.padding-icons {
  padding: 0 4px !important;
}

.font-footer {
  font-size: small;
}

.font-navbar {
  font-family: 'Oswald', sans-serif;
  font-weight: 900;
}

.flash {
  height: 50px;
}

.alert {
  background: $bg-orange;
  color: white;
}

.notice {
  background: $bg-dark-gray;
  color: white;
}

@media (max-width: 599px) {
  .avatar-big {
    height: 300px;
  }
}

@media (min-width: 600px) {
  .avatar-big {
    height: 600px;
  }
}

@media (min-width: 900px) {
  .avatar-big {
    height: 900px;
  }
}
