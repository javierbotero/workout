<footer class="d-sm-flex justify-content-between py-2 px-3 background-app text-light h-footer">
  <%= render 'layouts/logo' %>
  <ul class="d-flex list-unstyled align-self-center m-0 font-footer">
    <li class="pr-2"><%= link_to 'Privacy Policy', root_path, class: 'text-decoration-none text-color-orange' %></li>
    <li class="pr-2"><%= link_to 'Terms and Conditions', root_path, class: 'text-decoration-none text-color-orange' %></li>
    <li class="">Copyright <%= Time.now.year %>. All rights reserved.</li>
  </ul>
  <ul class="d-flex list-unstyled align-self-center m-0 align-items-center justify-content-end font-footer">
    <li class="pr-2">Contact with us:</li>
    <li class="pr-2 bg-color-orange rounded-circle padding-icons mr-1">
      <%= link_to 'https://www.twitter.com/', class: 'color-app' do %>
        <%= fa_icon('b twitter', class: 'mx-auto') %>
      <% end %>
    </li>
    <li class="pr-2 bg-color-orange rounded-circle padding-icons mr-1">
      <%= link_to 'https://www.instagram.com/', class: 'color-app' do %>
        <%= fa_icon('b instagram') %>
      <% end %>
    </li>
    <li class="pr-2 bg-color-orange rounded-circle px-1">
      <%= link_to 'https://www.facebook.com/', class: 'color-app' do %>
        <%= fa_icon('b facebook') %>
      <% end %>
    </li>
  </ul>
</footer>