<%= form_with model: article, local: true, class: 'd-flex flex-column justify-content-center p-5' do |article| %>
  <%= article.label 'Title', :title %><br>
  <%= article.text_field :title %><br>
  <%= article.label 'Add main image', :main %><br>
  <%= article.file_field :main, direct_upload: true %><br>
  <%= article.label 'Text', :text %><br>
  <%= article.text_field :text %><br>
  <%= article.label 'Add more images', :photos %><br>
  <%= article.file_field :photos, multiple: true, direct_upload: true %><br>
  <%= label_tag 'category', 'Choose one or many categories', class: 'py-2' %><br>

  <% Category.all.each do |catg| %>
    <%= label_tag 'categories', catg.name %>
    <%= check_box_tag 'categories[]', catg.id %><br>
  <% end %>

  <%= article.submit 'Submit' %>
<% end %>