<%= form_with model: article, local: true, class: 'd-flex flex-column justify-content-center p-5' do |art| %>
  <%= art.label :title, 'Title' %><br>
  <%= art.text_field :title %><br>
  <%= art.label :main, 'Main image' %><br>
  <%= art.file_field :main, direct_upload: true %><br>
  <%= main_image_article(article) %>
  <%= art.label :text, 'Write your art' %><br>
  <%= art.text_area :text, rows: 30, class: 'w-100' %><br>
  <%= art.label :photos, 'Add more images if necessary' %><br>
  <%= art.file_field :photos, multiple: true, direct_upload: true %><br>
  <%= display_pictures_article(article.photos) %>
  <%= label_tag 'category', 'Choose one or many categories', class: 'pt-3' %><br>
  <%= display_options_article(article) %>
  <%= art.submit 'Submit', class: 'mt-5' %>
<% end %>